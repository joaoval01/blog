<div class="container">
    <div class="row">
        <div class="col d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
            <div class="card card-plain">
                <div class="card-header">
                    <h4 class="font-weight-bolder">NEW POST</h4>
                </div>
                <div class="card-body bg-white rounded-bottom">
                    <%= form_with  model: @post do |form| %>

                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_field :name, class:'form-control m-20', :maxlength => 45, placeholder: 'nome' %>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_area :summary, class:'form-control', :maxlength => 100, placeholder: 'summary' %>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_area :content, class:'form-control', :maxlength => 500, placeholder: 'content' %>  
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <ul>
                            <% @categories.each do |category| %>
                                <li>
                                    <%= check_box_tag 'category_ids[]', category.id, @post_cats.filter { |a| a.category_id == category.id }.present? -%>
                                    <%= h category.name -%>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.file_field :image %>
                    </div>
                    <div class="text-center">
                        <%= form.submit 'Salvar', class:'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
                        <%= link_to 'Cancelar', posts_path, class:'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>