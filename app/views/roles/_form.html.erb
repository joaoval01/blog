<div class="container">
    <div class="row">
        <div class="col d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
            <div class="card card-plain">
                <div class="card-header">
                    <h4 class="font-weight-bolder">NEW ROLE</h4>
                </div>
                <div class="card-body bg-white rounded-bottom">
                    <%= form_with  model: @role do |form| %>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_field :username, class:'form-control', placeholder: 'role name', :maxlength => 20 %>
                    </div>
                    <div class="text-center">
                        <%= form.submit 'Salvar', class:'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
                        <%= link_to 'Cancelar', roles_path, class:'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>