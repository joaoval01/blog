<div class="container">
    <div class="row">
        <div class="col d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
            <div class="card card-plain">
                <div class="card-header">
                    <h4 class="font-weight-bolder">Cadastre</h4>
                </div>
                <div class="card-body bg-white rounded-bottom">
                    <%= form_for @user, url: user_create_path, method: :post do |form| %>

                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_field :email, class:'form-control', placeholder: 'email', :maxlength => 20 %>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.password_field :password, class:'form-control', placeholder: 'password', :maxlength => 250 %>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'password again' %>  
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.select :role_id, options_for_select([['Admin', 1], ['Comentarista', 2], ['Leitor', 3]]), :selected => :option %>
                    </div>
                    <div class="text-center">
                        <%= form.submit 'Salvar', class:'btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0' %>
                        <%= link_to 'Cancelar', users_path, class:'btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0' %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>