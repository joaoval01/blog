<div class="container">
    <div class="row">
        <div class="col d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
            <div class="card card-plain">
                <div class="card-header">
                    <h4 class="font-weight-bolder">NEW CATEGORY</h4>
                </div>
                <div class="card-body bg-white rounded-bottom">
                    <%= form_with  model: @category do |form| %>

                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_field :name, class:'form-control m-20', :maxlength => 20, placeholder: 'nome' %>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                        <%= form.text_area :description, class:'form-control', :maxlength => 250, placeholder: 'summary' %>
                    </div>
                    <div class="text-center">
                        <%= form.submit 'Salvar', class:'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
                        <%= link_to 'Cancelar', categories_path, class:'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>