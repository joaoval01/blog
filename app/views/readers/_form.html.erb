<div class="row my-10 w-100">
  <div class="col-6 d-lg-flex h-100 pe-0 mx-4 position-absolute top-0 start-0 text-center justify-content-center flex-column">
    <div class="position-relative bg-gradient-secondary h-75 border-radius-lg d-flex flex-column justify-content-center" style="background-image: url('../assets/images/bird.jpeg'); background-size: cover;">
    </div>
  </div>
  <div class="col-xl-4 d-flex flex-column ms-lg-auto me-lg-8">
    <div class="card card-plain">
      <div class="card-header bg-gradient-secondary text-center col-yl-10">
        <h4 class="font-weight-bolder text-light">Cadastre um leitor</h4>
      </div>
      <div class="card-body bg-white rounded">
      <%= form_with  model: @role do |form| %>     
          <div class="input-group input-group-outline mb-3 field">
            <div class='field w-100'>            
              <%= form.text_field :username, autocomplete: "username", class: 'form-control', placeholder: 'username' %>
            </div>
          </div>
          <div class="input-group input-group-outline mb-3 field">
            <div class='field w-100'>
              <%= form.text_field :email, autocomplete: "email", class: 'form-control', placeholder: 'email' %>
            </div>
          </div>
          <div class="input-group input-group-outline mb-3">
            <div class='field w-100'>
              <%= form.text_field :password, autocomplete: "password", class: 'form-control', placeholder: 'password' %>
            </div>
          </div>
          <div class="text-center">
            <%= form.submit "New Reader", class: 'btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0' %>
          </div>
          <%#= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
