<div class="jumbotron text-light">
    <div class="container">
      <h1 class="display-3 text-light"><%= @post.name %></h1>
      <p><%= @post.summary %> </p>
    </div>
  </div>


<%= @value_median %>
          <% if current_user && @rate == [] %>
            <%= form_with model: @evaluation, local: false, :html => {:id => 'evaluation_form'}  do |form| %>
              <%= form.hidden_field :post_id, value: @post.id%>
              <%= form.select :value, options_for_select(0..5), { prompt: "Avaliação foda" } %>
              <%= form.submit 'Salvar', class:'btn' %>
            <% end %>
          <% end %>
        </div>
        <%= image_tag @post.image, style: 'height:20vw;width:100vw;margin-bottom:20px;' %>
        <div class='bg-light'>
          <%= form_with model: @comment, local: false, :html => {:id => 'comment_form'}  do |form| %>
          <%= form.hidden_field :post_id, value: @post.id%>
          <%= form.text_area :description, class:'form-control', :maxlength => 100 %>
          <%= form.submit 'Salvar', class:'btn' %>
        <% end %>
        </div>
        <div id='lista-comentarios'>
          <%= render 'comments', comments: @comments %>
        </div>


<% (1..@value_median.to_i).each do |e| %>
  <%= image_tag @post.image, style: 'height:10vw;width:100vw;margin-bottom:20px;' %>
<% end %>