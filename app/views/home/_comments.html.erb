<% @comments.each do |comment| %>
    <% if current_user.id == comment.user_id %>
        <%= link_to 'deletar', comment_path(comment),  method: :delete, remote: true %> 
    <% end %>
    <br>
    <%= comment.user.email %>
    <br>
    <%= comment.description %>
    <hr>
    <%= form_with model: @comment_son, local: false, :html => {:id => 'coment_form'}  do |form| %>
        <%= form.hidden_field :post_id, value: comment.post_id %>
        <%= form.hidden_field :comment_id, value: comment.id %>
        <%= form.text_area :description, class:'form-control', :maxlength => 100 %>
        <%= form.submit 'Salvar', class:'btn' %>
    <% end %>
    <% comment.comments.each do |humm|%>
        <%= humm.user.email %>
        <br>
        <%= humm.description %>
        <hr>
    <% end %>
<% end %>